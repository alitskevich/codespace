<component id="Page.Main">
  <div class="h-screen pt-20
    bg-fixed bg-cover" style="background-image: url({R.assets.bg})">
    <Container class="" id="menu">
      <div class="grid grid-cols-[repeat(3,minmax(5rem,1fr))] 
      gap-4 md:gap-8 p-4 md:p-8 w-full
      bg-fixed bg-cover" style="background-image: url({R.assets.bg})">
        <NavLink href="/items/{item.id}?reset=true" aria-current="page" class="
          flex flex-col items-center justify-center
          font-medium text-lg md:text-xl uppercase
          h-48 gap-2 px-2 md:px-4 py-2 rounded-md 
          bg-gray-300/[.6] dark:bg-slate-600/[.6]
          border-1 border-gray-300 dark:border-slate-800
          " Each="item of R.enums.type">
          <div class="w-24 h-24 text-gray-800 dark:text-gray-50 p-4" style="font-size:5rem;">{item.symbol}</div>
          <span>{item.name}</span>
        </NavLink>
      </div>
    </Container>
  </div>
  <nav class="fixed top-0 left-0 right-0" id="top">
    <Container class="relative flex flex-no-wrap h-16 gap-2 px-2 sm:gap-4 items-center">
      <NavLink href="/main" class=" flex flex-shrink-0 items-center">
        <Logo />
      </NavLink>

      <h2 class="font-bold text-lg text-white truncate uppercase">{R.app.name}
      </h2>
      <div class="flex flex-1 gap-2 items-center"></div>

      <DarkModeToggler value="<-dark.isDarkMode" on="-> dark.toggle()" />
      <UserBar />
    </Container>
  </nav>



</component>