<component id="Page.Main">

  <div class="fixed flex flex-col inset-0 pt-20
        bg-fixed bg-cover overflow-y-auto" style="background-image: url({R.assets.bg})">
    <MainContent />
    <Footer />
  </div>

  <Header />
  <Settings If="<- localStorage.showSettings" />
</component>

<component id="MainContent">
  <div class=" flex-1 flex flex-col items-center gap-4">
    <div class="w-full flex-1 flex flex-col items-center gap-4 pt-4
                  bg-gradient-to-b from-gray-10 dark:from-gray-800 to-40%">

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-16 p-4 md:p-16">

        <div class="{R.styles.card} 
            flex flex-col items-stretch gap-4 md:gap-16 min-h-max p-4  md:p-8
            border-neutral-500 !bg-slate-900/[0.85] 
            rounded-md" Each="nav of R.nav">
          <h3 class="text-xl md:text-2xl text-white uppercase flex-1 text-center">{nav.caption}</h3>
          <h3 class="text-7xl text-white uppercase flex-1 text-center">{nav.symbol}</h3>
          <div class="flex items-center justify-around gap-4">
            <Btn class=" px-4 py-4 text-xl !bg-sky-700/[0.8] !dark:bg-sky-700/[0.8] uppercase" title="{nav.name}"
              action="-> nav.hash=nav.id|strEnhance:'/*'" />
          </div>
        </div>

      </div>
    </div>
  </div>
</component>