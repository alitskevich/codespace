<components>
  <component id="Page.AddText2">
    <StoredData name="focusator-text" data="{text}" defaults="{R.samples.text1}" action="-> text" />
    <Connector data="<-words.parsequence" change="-> parsequence" />
    <Header />
    <div class=" flex-1 flex flex-col items-stretch gap-4 mb-2 pt-2" If="!parsequence.length">
      <Hint text="{R.app.hint}" />
      <textarea class="text-black bg-white dark:bg-slate-200 w-full rounded-lg p-2 flex-1 overflow-y-auto"
        change="-> text = it.value">{text}</textarea>
      <FAB title="Analyze it" icon="Upload" class="px-4 py-4" action="-> words.uploadText(text)" />
    </div>

    <div class=" flex-1 flex flex-col items-stretch gap-4 mb-2 pt-20" If="parsequence.length">
      <Hint text="{R.app.hint2}" />
      <FAB title="Reset" icon="Refresh" class="px-4 py-4" action="-> words.uploadText('')" />
    </div>
    <!-- <LegalAttribution /> -->
  </component>



</components>