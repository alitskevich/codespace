<component id="DomNodePropertiesAppearance">
  <NodeDesignController Ref="design" node="<-editor.currentNode" />
  <Connector data="<-design.data" change="-> data" />

  <div>
    <div class="pl-2 h-8 flex flex-row items-center justify-between">
      <Line>
        <div class="font-bold">Sizing </div>
        <Dropdown value="{data.display}" change="{change}" id="display" placeholder="display"
          options="{R.enums.display}" />
        <Dropdown value="{data.position}" change="{change}" id="position" placeholder="position"
          options="{R.enums.position}" />
      </Line>
      <Dropdown triggerComponent="IconPlusDropdownTrigger" side="right" caption="Layout options:"
        change="-> append=data.value" options="{R.ide.nodeLayoutProps}" />
    </div>

  </div>

  <div>
    <div class="pl-2 h-8 flex flex-row items-center justify-between">
      <Line>
        <div class="font-bold">Layout </div>
        <Dropdown value="{data.display}" change="{change}" id="display" placeholder="display"
          options="{R.enums.display}" />
        <Dropdown value="{data.position}" change="{change}" id="position" placeholder="position"
          options="{R.enums.position}" />
      </Line>
      <Dropdown triggerComponent="IconPlusDropdownTrigger" side="right" caption="Layout options:"
        change="-> append=data.value" options="{R.ide.nodeLayoutProps}" />
    </div>
  </div>

  <div>
    <div class="pl-2 h-8 flex flex-row items-center justify-between">
      <Line>
        <div class="font-bold">Spacing </div>
        <Dropdown value="{data.display}" change="{change}" id="display" placeholder="display"
          options="{R.enums.display}" />
        <Dropdown value="{data.position}" change="{change}" id="position" placeholder="position"
          options="{R.enums.position}" />
      </Line>
      <Dropdown triggerComponent="IconPlusDropdownTrigger" side="right" caption="Layout options:"
        change="-> append=data.value" options="{R.ide.nodeLayoutProps}" />
    </div>
  </div>


  <div>
    <div class="pl-2 h-8 flex flex-row items-center justify-between">
      <Line>
        <div class="font-bold">Effects: </div>
        <Dropdown value="{data.display}" change="{change}" id="display" placeholder="display"
          options="{R.enums.display}" />
        <Dropdown value="{data.position}" change="{change}" id="position" placeholder="position"
          options="{R.enums.position}" />
      </Line>
      <Dropdown triggerComponent="IconPlusDropdownTrigger" side="right" caption="Layout options:"
        change="-> append=data.value" options="{R.ide.nodeLayoutProps}" />
    </div>
  </div>


  <div>
    <div class="pl-2 h-8 flex flex-row items-center justify-between">
      <Line>
        <div class="font-bold">Animation: </div>
      </Line>
      <Dropdown triggerComponent="IconPlusDropdownTrigger" side="right" caption="Layout options:"
        change="-> append=data.value" options="{R.ide.nodeLayoutProps}" />
    </div>
  </div>

  <div>
    <div class="pl-2 h-8 flex flex-row items-center justify-between">
      <Line>
        <div class="font-bold">Modifiers: </div>
      </Line>
      <Dropdown triggerComponent="IconPlusDropdownTrigger" side="right" caption="Layout options:"
        change="-> append=data.value" options="{R.ide.nodeLayoutProps}" />
    </div>
  </div>
</component>